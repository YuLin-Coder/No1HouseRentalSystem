<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.dao.OrderMapper">
    <resultMap type="com.house.entity.Order" id="BasicMap">
        <id column="o_id" jdbcType="INTEGER" property="orderId"/>
        <result column="h_id" jdbcType="VARCHAR" property="houseId"/>
        <result column="order_time" jdbcType="VARCHAR" property="orderTime"/>
        <result column="order_user" jdbcType="VARCHAR" property="orderUser"/>
    </resultMap>

    <resultMap type="com.house.entity.UserOrder" id="UserOrderMapper">
        <id column="o_id" jdbcType="INTEGER" property="orderId"/>
        <result column="h_id" jdbcType="INTEGER" property="houseId"/>
        <result column="u_id" jdbcType="INTEGER" property="userId"/>
        <result column="order_time" jdbcType="VARCHAR" property="orderTime"/>
        <result column="order_user" jdbcType="VARCHAR" property="orderUser"/>
        <result column="house_desc" jdbcType="VARCHAR" property="houseDesc"/>
        <result column="house_model" jdbcType="VARCHAR" property="houseModel"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="house_area" jdbcType="VARCHAR" property="houseArea"/>
        <result column="house_floor" jdbcType="VARCHAR" property="houseFloor"/>
        <result column="house_type" jdbcType="VARCHAR" property="houseType"/>
        <result column="house_price" jdbcType="INTEGER" property="housePrice"/>
        <result column="house_address" jdbcType="INTEGER" property="houseAddress"/>
        <result column="house_image" jdbcType="INTEGER" property="houseImage"/>
        <result column="community_name" jdbcType="INTEGER" property="communityName"/>
        <result column="house_linkman" jdbcType="INTEGER" property="houseLinkMan"/>
        <result column="house_oriented" jdbcType="INTEGER" property="houseOriented"/>
    </resultMap>
    <!-- 添加订单信息 -->
    <insert id="addOrder" parameterType="com.house.entity.Order">
        insert into t_order  ( h_id, u_id,order_time,order_user,type,status)
        values ( #{houseId}, #{userId}, NOW(), #{orderUser}, #{type}, #{status})
    </insert>
    <!-- 查询所有订单信息 -->
    <select id="findAllOrder" parameterType="com.house.entity.Page" resultMap="UserOrderMapper">
        select *
        from t_house h,
             t_order o
        where h.h_id = o.h_id
          and u_id = #{userId}
        limit #{page},#{limit}
    </select>
    <!-- 查询所有订单信息 -->
    <select id="findAllOrder2" parameterType="com.house.entity.Page" resultMap="UserOrderMapper">
        select *
        from t_house h,
             t_order o
        where h.h_id = o.h_id
        limit #{page},#{limit}
    </select>

    <!-- 条件查询不同用户的订单数目 -->
    <select id="getOrderCount" resultType="int" parameterType="int">
        select count(o_id)
        from t_order
        where u_id = #{userId}
    </select>

    <select id="getOrderCount2" resultType="int" parameterType="int">
        select count(o_id)
        from t_order
    </select>

    <!-- 删除订单 -->
    <delete id="deleteOrder" parameterType="int">
        delete
        from t_order
        where o_id = #{orderId}
    </delete>



    <update id="editOrder"  >
        update t_order set
           status=#{status}
            where o_id = #{orderId}
    </update>

</mapper>